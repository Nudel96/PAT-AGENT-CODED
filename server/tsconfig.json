{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": false,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"outDir": "../dist/server",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/types": ["./types"],
			"@/utils": ["./utils"],
			"@/middleware": ["./middleware"],
			"@/routes": ["./routes"],
			"@/models": ["./models"],
			"@/services": ["./services"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.js"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
