# Production Environment Configuration
NODE_ENV=production

# Database Configuration
POSTGRES_USER=priceactiontalk_user
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=priceactiontalk
DATABASE_URL=postgresql://priceactiontalk_user:your_secure_database_password_here@postgres:5432/priceactiontalk

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_BASIC_PRICE_ID=price_your_basic_plan_price_id
STRIPE_PREMIUM_PRICE_ID=price_your_premium_plan_price_id

# Email Configuration (SMTP)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USER=your-email@your-domain.com
EMAIL_PASS=your_email_password_here
EMAIL_FROM=noreply@priceactiontalk.com

# Application URLs
PUBLIC_API_URL=https://api.priceactiontalk.com
PUBLIC_WS_URL=wss://ws.priceactiontalk.com
PUBLIC_APP_URL=https://priceactiontalk.com

# Security
CORS_ORIGIN=https://priceactiontalk.com,https://www.priceactiontalk.com
SESSION_SECRET=your_session_secret_key_here

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Performance
CACHE_TTL=3600
MAX_CONNECTIONS=100

# Feature Flags
ENABLE_DEMO_TRADING=true
ENABLE_REAL_TRADING=false
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true

# External APIs (if needed)
FOREX_API_KEY=your_forex_data_api_key_here
NEWS_API_KEY=your_news_api_key_here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Domain Configuration
DOMAIN=priceactiontalk.com
SUBDOMAIN_API=api
SUBDOMAIN_WS=ws
