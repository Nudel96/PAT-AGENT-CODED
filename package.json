{
  "name": "priceactiontalk",
  "version": "1.0.0",
  "description": "Production-ready SvelteKit trading platform with comprehensive data-driven tools, education, and community features",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "server:dev": "nodemon server/index.ts",
    "server:build": "tsc -p server/tsconfig.json",
    "server:start": "node dist/server/index.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "2.27.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.2.0",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.5.11",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^4.0.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^2.10.1",
    "svelte": "^5.38.0",
    "svelte-check": "^4.3.1",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^7.0.6"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "argon2": "^0.43.1",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "stripe": "^18.4.0",
    "tailwind-merge": "^3.3.1",
    "ws": "^8.14.2",
    "zod": "^4.0.15"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  }
}
